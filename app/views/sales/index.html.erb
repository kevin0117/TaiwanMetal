<style>
  table tr td,
  table tr th {
    /* border: 1px solid #1d1e22; */
    padding: 5px;
  }
  table {
    border-collapse: collapse;
  }

  @media (max-width: 992px){
    table.responsive-table {
      width: 100%;
      border-collapse: collapse;
      border-spacing: 0;
      display: block;
      position: relative;
      font-size: 4rem;
      /* sort out borders */
    }
    table.responsive-table td:empty:before {
        content: "\00a0";
    }
    table.responsive-table th,
    table.responsive-table td {
        margin: 0;
        vertical-align: top;
    }
    table.responsive-table th {
        text-align: left;
    }
    table.responsive-table thead {
        display: block;
        float: left;
    }
    table.responsive-table thead tr {
        display: block;
        padding: 0 10px 0 0;
    }
    table.responsive-table thead tr th::before {
        content: "\00a0";
    }
    table.responsive-table tbody {
        display: block;
        width: auto;
        position: relative;
        overflow-x: auto;
        white-space: nowrap;
    }
    table.responsive-table tbody tr {
        display: inline-block;
        vertical-align: top;
    }
    table.responsive-table th {
        display: block;
        text-align: right;
    }
    table.responsive-table td {
        display: block;
        min-height: 1.25em;
        text-align: left;
    }
    table.responsive-table tr {
        border-bottom: none;
        padding: 0 10px;
    }
    table.responsive-table thead {
        border: 0;
        /* border-right: 1px solid #1d1e22; */
    }
    p{
      font-size: 3rem;
    }
    .btn{
      font-size: 3.5rem;
    }
    h5{
      font-size: 4rem;
    }
    h3{
      font-size: 3rem;
    }
    h1{
      font-size: 6rem;
    }
    .pagination{
      font-size: 4rem;
    }
    .close{
      font-size: 4rem;
    }
    #q_sale_date_lteq{
      width: 100%;
    }
    #q_sale_date_gteq{
      width: 100%;
    }
    .scrap-table {
      text-align: center;
      font-size: 2.5rem;
    }
  }
</style>

<h1>銷售列表</h1>

<%= link_to "新增銷售", new_sale_path, class:"btn btn-outline-secondary mb-3" %>

<%= search_form_for @q, class: 'form-inline' do |f| %>
  <div class="row">
    <div class='col-lg-5 col-sm-6'>
      <%= f.date_field :sale_date_gteq,
        class: "form-control input-sm search_field", data: { toggle: "tooltip", placement: "top"},  title: "起始日期"
      %>
    </div>
    <div class='col-lg-5 col-sm-6'>
      <%= f.date_field :sale_date_lteq,
        class: "form-control input-sm search_field", data: { toggle: "tooltip", placement: "top"},  title: "結束日期"
      %>
    </div>

    <div class='col-lg-2 col-sm-2'><%= f.submit "搜尋", class:"btn btn-outline-dark ml-3"%></div>
  </div>

<% end %>

<br>

<%= paginate @sales %>

<table class='table table-hover responsive-table table-light'>

  <thead class='thead-dark'>
    <tr>
      <th>日期</th>
      <th>銷售ID</th>
      <th>銷售金額</th>
      <th>工錢利潤</th>
      <th>付款方式</th>
      <th>會員</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
    <tr>
      <td><%= link_to sale.sale_date.to_formatted_s(:short), sale_path(sale) %></td>
      <td><%= sale.id %></td>
      <td><%= sale.sale_price %></td>
      <td><%= sale.service_profit %></td>
      <td><%= sale.payment_method %></td>
      <td><%= sale.user.name %></td>
      <td>
        <%= link_to "編輯", edit_sale_path(sale), class:"btn btn-outline-success" %>
        <%= link_to "刪除", sale_path(sale), method: :delete, data: {confirm: "確認取消嗎？", commit: '是的', title: '你確定嗎?', cancel: '取消'}, class:"btn btn-outline-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.sales.exists? %>
  <div class='table-responsive'>
    <table class='table table-hover table-light sale-table' >
      <thead class='thead-dark'>
        <tr>
          <th>合計銷售金額</th>
          <th>合計工錢利潤</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>$<%= @sales.sum(:sale_price)%></td>
          <td>$<%= @sales.sum(:service_profit) %></td>
        </tr>
      </tbody>
    </table>
  </div>
<% end %>
