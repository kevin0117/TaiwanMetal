<style>
  @media (max-width: 992px){
    h1{
      text-align: center;
      font-size: 5rem;
    }
    h2{
      text-align: center;
      font-size: 4.5rem;
    }
    .btn{
      font-size: 2rem;
    }
    .hide-table{
      display: none;
    }
    p{
      font-size: 3rem;
    }
    .close{
      font-size: 5rem;
    }
  }
  .info {
    height: 75vh;
  }

