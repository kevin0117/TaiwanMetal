<style>

@media (max-width: 992px){
  label{
    font-size: 3rem;
  }
  .invalid-feedback{
    font-size: 3rem;
  }
}
.new_form{
  font-size: 1.3rem;
}
</style>

<div class="form-group new_form">
  <%= simple_form_for(customer) do |f| %>
    <%= f.input :name, label: '名稱', class:"form-control"  %>
    <%= f.input :description, label: '描述', class:"form-control"  %>
    <%= f.input :online, label: '正常營運中', class:"form-control"  %>

    <%= f.button :submit, "建立客戶", class:'btn btn-info'%>  
  <% end %>
</div>