<style>

@media (max-width: 992px){
  h1{
    font-size: 6rem;
  }
  h5{
    font-size: 4rem;
  }
  p{
    font-size: 3rem;
  }
  .button-customer{
    font-size: 3.5rem;
  }
  table{
        font-size: 3rem;
  }
}

</style>

<h1>客戶基本資料</h1>

<%= link_to "新增客戶", new_customer_path, class:"btn btn-outline-secondary mb-3 button-customer" %>

<table class='table table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>名稱</th>
      <th>描述</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= link_to customer.name, edit_customer_path(customer) %></td>
      <td><%= strip_tags(customer.description).truncate(100) %></td>
      <td>
        <%= link_to "編輯", edit_customer_path(customer), class:'btn btn-outline-success button-customer' %>
        <%= link_to "刪除", customer_path(customer), method: :delete, data: {confirm: "確認取消嗎？", commit: '是的', title: '你確定嗎?', cancel: '取消'}, class: 'btn btn-outline-danger button-customer' %>
      </td>
    </tr>    
    <% end %>
  </tbody>
</table>

