<style>

@media (max-width: 992px){
  h1{
    font-size: 6rem;
  }
  h5{
    font-size: 4rem;
  }
  p{
    font-size: 3rem;
  }
  table{
        font-size: 4rem;
  }
  .btn{
    font-size: 3.5rem;
  }
  .close{
    font-size: 4rem;
  }
}
</style>

<h1>商品基本資料</h1>

<%= link_to "新增商品資料", new_product_list_path, class:"btn btn-outline-secondary mb-3" %>

<table class='table table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>名稱</th>
      <th>描述</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% @productLists.each do |productList| %>
    <tr>
      <td><%= link_to productList.name, edit_product_list_path(productList) %></td>
      <td><%= strip_tags(productList.description).truncate(100) %></td>
      <td>
        <%= link_to "編輯", edit_product_list_path(productList), class:"btn btn-outline-success" %>
        <%= link_to "刪除", product_list_path(productList), method: :delete, data: {confirm: "確認取消嗎？", commit: '是的', title: '你確定嗎?', cancel: '取消'}, class: 'btn btn-outline-danger' %>
      </td>
    </tr>    
    <% end %>
  </tbody>
</table>