<style>
  @media (max-width: 992px){
    h1{
      font-size: 6rem;
    }
    h5{
      font-size: 4rem;
    }
    p{
      font-size: 3rem;
    }
    table{
      font-size: 3rem;
    }
    .btn{
      font-size: 3.5rem;
    }
    .close{
      font-size: 4rem;
    }
  }
</style>

<h1>廠商基本資料</h1>

<%= link_to "新增廠商", new_vendor_path, class:"btn btn-outline-secondary mb-3" %>

<table class='table table-hover'>
  <thead class='thead-light'>
    <tr>
      <th>名稱</th>
      <th>描述</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
    <tr>
      <td><%= link_to vendor.name, edit_vendor_path(vendor) %></td>
      <td><%= strip_tags(vendor.description).truncate(100) %></td>
      <td>
        <%= link_to "編輯", edit_vendor_path(vendor) , class:"btn btn-outline-success"%>
        <%= link_to "刪除", vendor_path(vendor), method: :delete, data: {confirm: "確認取消嗎？", commit: '是的', title: '你確定嗎?', cancel: '取消'} , class:"btn btn-outline-danger"%>
      </td>
    </tr>    
    <% end %>
  </tbody>
</table>